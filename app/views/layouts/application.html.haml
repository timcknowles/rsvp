!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    %title= content_for?(:title) ? yield(:title) : "Cuppa"
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    = yield(:head)
    %link{:href => "http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.1/themes/cupertino/jquery-ui.min.css", :rel => "stylesheet", :type => "text/css"}
  

  
  
    

    
   
  %body.body
    

    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          .button.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse", :type => "button"}
            .icon-bar
            .icon-bar
            .icon-bar
          /= link_to "Cuppa", root_path, :class => 'brand'
          .nav-collapse.collapse
            = render 'layouts/navigation' 
  
   
    = yield
        
    %footer
      = render 'layouts/messages'
      /= debug(params) if Rails.env.development?