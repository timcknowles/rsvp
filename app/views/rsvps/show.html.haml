%table.table.table-bordered.table-striped.table-hover
  %tr
    %th Name
    %th Attending
    %th Vegetarian?
    %th Other dietary requirement(s)
  
  -current_family.guests.each do |guest|
    %tr
      %td= guest.name
      %td= guest.rsvp ? "Yes please" : "No sorry I can't make it"
      %td= guest.vegetarian ? "yes" : "no"
      %td= guest.dietary
   
        
  
%p= link_to "Edit RSVP", edit_rsvp_path
